<Page x:Class="CinemaApp.View.Client.User_Backet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CinemaApp.View.Client"
        mc:Ignorable="d"
        Title="User_Login" Height="450" Width="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="Black"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="120" Name="UserLogin" Style="{DynamicResource MaterialDesignFlatAccentButton}" Foreground="White" TextElement.FontSize="15">Вход</Button>
            <Button Width="120" x:Name="UserRegistration" Style="{DynamicResource MaterialDesignFlatAccentButton}" Foreground="White" TextElement.FontSize="15" Content="Регистрация"/>
        </StackPanel>
        <TextBlock Grid.Row="1" x:Name ="Backet" Style="{DynamicResource MaterialDesignHeadline2TextBlock}" Foreground="Black" Margin="30,105,642,304" FontFamily="Arial Black" FontSize="25" >Text="Корзина"/></TextBlock>
    </Grid>
</Page>

            <Button Width="120" Name="UserLogin" Click="User_Login_OnClick" Style="{DynamicResource MaterialDesignFlatAccentButton}" Foreground="White" TextElement.FontSize="15">Вход</Button>
            <Button Width="120" x:Name="UserRegistration" Click="User_Registration_OnClick" Style="{DynamicResource MaterialDesignFlatAccentButton}" Foreground="White" TextElement.FontSize="15" Content="Регистрация"/>
        -->
        </StackPanel>
        <Frame Grid.Row="1" Name="DetailedSessionFrame"></Frame>
        

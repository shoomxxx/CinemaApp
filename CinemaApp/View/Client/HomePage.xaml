        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="Black" />
        <StackPanel Name="PanelForButton" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
